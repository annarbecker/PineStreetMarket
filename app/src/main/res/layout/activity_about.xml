<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.epicodus.pinestreetmarket.AboutActivity"
    android:background="#99DFD6C2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pine Street Market"
        android:id="@+id/textView"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="20sp"
        android:typeface="monospace"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pine Street Market is an exciting new food hall and culinary themed marketplace located in Downtown Portland, Oregon opening in spring of 2016. Located in the historic Baggage and Carriage Building just blocks from Portlandâ€™s waterfront, Pine Street Market features an open floor plan with communal seating surrounded by nine restaurants featuring the top chefs and restaurant operators in the city. Please see the tenant page for the full roster of tenants."
        android:id="@+id/textView2"
        android:layout_marginTop="10dp"
        android:typeface="monospace"
        android:textSize="15sp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="textStart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="OPEN EVERYDAY 6am - 11pm"
        android:id="@+id/textView3"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="20sp"
        android:typeface="monospace"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="126 SW 2nd Ave. Portland, OR 97204"
        android:id="@+id/textView4"
        android:typeface="monospace"
        android:textSize="15sp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:paddingTop="5dp" />

</RelativeLayout>
